[Unit]
Description=Wallpaper Gacha Manager
After=network.target

[Service]
Type=simple
User=%u
WorkingDirectory=%h/git/zinbhe/wallpaper-gacha
ExecStart=/usr/bin/python3 %h/git/zinbhe/wallpaper-gacha/wallpaper-manager.py
Restart=on-failure
RestartSec=60

# Environment
Environment="DISPLAY=:0"
Environment="WAYLAND_DISPLAY=wayland-1"

[Install]
WantedBy=default.target
